@model IEnumerable<MoviePlace.Models.Receipt>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MGenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MTrailer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoldCopies)
            </th>
            <th>
                <a>Sale</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MGenre)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.MTrailer)">
                    View Trailer
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoldCopies)
            </td>
            <td>
                    <a asp-action="SomeReceipt">ADD</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
